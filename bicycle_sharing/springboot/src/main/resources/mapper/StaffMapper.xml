<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.StaffMapper">

    <resultMap id="StaffResultMap" type="com.example.springboot.entity.Staff">
        <id column="staff_id" property="staffId"/>
        <result column="username" property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="staff_type" property="staffType"/>
    </resultMap>

    <select id="findByUsername" parameterType="String" resultType="com.example.springboot.entity.Staff">
        SELECT staff_id, username, managerId, geohash FROM staff WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.example.springboot.entity.Staff">
        INSERT INTO staff (username, password_hash)
        VALUES (#{username}, #{passwordHash})
    </insert>

    <update id="update">
        UPDATE staff
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="passwordHash != null">password_hash = #{passwordHash},</if>
        </set>
        WHERE staff_id = #{staffId}
    </update>

    </mapper>