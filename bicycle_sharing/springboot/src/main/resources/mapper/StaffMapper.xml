<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.StaffMapper">

    <resultMap id="StaffResultMap" type="com.example.springboot.entity.Staff">
        <id column="staff_id" property="staffId"/>
        <result column="username" property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="staff_type" property="staffType"/>
    </resultMap>

    <select id="findByUsername" parameterType="String" resultType="com.example.springboot.entity.Staff">
        SELECT * FROM staff WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.example.springboot.entity.Staff">
        INSERT INTO staff (username, password_hash, staff_type)
        VALUES (#{username}, #{passwordHash}, #{staffType})
    </insert>


    </mapper>