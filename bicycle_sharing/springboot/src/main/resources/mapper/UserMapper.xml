<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.example.springboot.entity.User">
        <id column="userid" property="userid"/>
        <result column="username" property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="total_rides" property="totalRides"/>
        <result column="total_duration_minutes" property="totalDurationMinutes"/>
        <result column="total_cost" property="totalCost"/>
    </resultMap>

    <select id="findByUsername" resultMap="UserResultMap">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="findByPhoneNumber" resultMap="UserResultMap">
        SELECT * FROM user WHERE phone_number = #{phoneNumber}
    </select>

    <insert id="insert">
        INSERT INTO user (
            userid, username, password_hash, phone_number, total_rides, total_duration_minutes, total_cost
        ) VALUES (
                     #{userid}, #{username}, #{passwordHash}, #{phoneNumber}, #{totalRides}, #{totalDurationMinutes}, #{totalCost}
                 )
    </insert>

    <select id="findByUserId" resultMap="UserResultMap">
        SELECT *
        FROM user
        WHERE userid = #{userid}
    </select>

    <update id="update">
        UPDATE user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="passwordHash != null">password_hash = #{passwordHash},</if>
            <if test="phoneNumber != null">phone_number = #{phoneNumber},</if>
            <if test="totalRides != null">total_rides = #{totalRides},</if>
            <if test="totalDurationMinutes != null">total_duration_minutes = #{totalDurationMinutes},</if>
            <if test="totalCost != null">total_cost = #{totalCost},</if>
        </set>
        WHERE userid = #{userid}
    </update>
    <select id="getById" resultMap="UserResultMap">
        SELECT * FROM user WHERE userid = #{id}
    </select>
</mapper>